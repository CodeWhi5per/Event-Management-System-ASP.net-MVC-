@{
    ViewData["Title"] = "About Us";
}

<div class="container py-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold mb-3">About Cultural Council</h1>
        <p class="lead text-muted col-lg-8 mx-auto">
            Bringing communities together through arts, culture, and unforgettable experiences
        </p>
    </div>

    <!-- Mission Section -->
    <div class="row mb-5">
        <div class="col-lg-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-3">
                        <i class="fas fa-bullseye fa-3x text-primary"></i>
                    </div>
                    <h3 class="text-center mb-3">Our Mission</h3>
                    <p class="text-muted">
                        We are dedicated to enriching our community through diverse cultural events and experiences. 
                        Our mission is to make arts and culture accessible to everyone, fostering creativity, 
                        understanding, and connection among people from all walks of life.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-3">
                        <i class="fas fa-eye fa-3x text-primary"></i>
                    </div>
                    <h3 class="text-center mb-3">Our Vision</h3>
                    <p class="text-muted">
                        To be the leading platform for cultural exchange and artistic expression, creating a vibrant 
                        community where everyone can discover, appreciate, and participate in transformative cultural 
                        experiences that inspire, educate, and unite.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- What We Offer -->
    <div class="mb-5">
        <h2 class="text-center mb-4">What We Offer</h2>
        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <div class="card text-center h-100 shadow-sm">
                    <div class="card-body p-4">
                        <i class="fas fa-music fa-3x text-primary mb-3"></i>
                        <h5>Concerts</h5>
                        <p class="text-muted mb-0">Live music performances from various genres</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card text-center h-100 shadow-sm">
                    <div class="card-body p-4">
                        <i class="fas fa-theater-masks fa-3x text-primary mb-3"></i>
                        <h5>Theater</h5>
                        <p class="text-muted mb-0">Drama, comedy, and theatrical productions</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card text-center h-100 shadow-sm">
                    <div class="card-body p-4">
                        <i class="fas fa-palette fa-3x text-primary mb-3"></i>
                        <h5>Art Exhibitions</h5>
                        <p class="text-muted mb-0">Visual arts and gallery showcases</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card text-center h-100 shadow-sm">
                    <div class="card-body p-4">
                        <i class="fas fa-chalkboard-teacher fa-3x text-primary mb-3"></i>
                        <h5>Workshops</h5>
                        <p class="text-muted mb-0">Educational and creative learning sessions</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Why Choose Us -->
    <div class="card bg-light shadow-sm mb-5">
        <div class="card-body p-5">
            <h2 class="text-center mb-4">Why Choose Us</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="d-flex">
                        <i class="fas fa-check-circle text-success fa-2x me-3"></i>
                        <div>
                            <h5>Easy Booking</h5>
                            <p class="text-muted mb-0">Simple and secure online booking process</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex">
                        <i class="fas fa-check-circle text-success fa-2x me-3"></i>
                        <div>
                            <h5>Diverse Events</h5>
                            <p class="text-muted mb-0">Wide variety of cultural experiences</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex">
                        <i class="fas fa-check-circle text-success fa-2x me-3"></i>
                        <div>
                            <h5>Best Venues</h5>
                            <p class="text-muted mb-0">Premium locations across the region</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center">
        <h3 class="mb-3">Ready to Explore?</h3>
        <p class="text-muted mb-4">Join our community and discover amazing cultural events</p>
        <div class="d-flex gap-3 justify-content-center flex-wrap">
            <a asp-controller="Event" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="fas fa-calendar-alt me-2"></i>Browse Events
            </a>
            <a asp-controller="Inquiry" asp-action="Create" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-envelope me-2"></i>Contact Us
            </a>
        </div>
    </div>
</div>
