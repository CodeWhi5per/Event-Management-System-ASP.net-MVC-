@model List<Review>
@{
    ViewData["Title"] = "Reviews";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold mb-2">
                <i class="fas fa-star text-warning me-2"></i>Event Reviews
            </h1>
            <p class="text-muted">See what others are saying about our events</p>
        </div>
    </div>

    <!-- Filter -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-8">
                    <label class="form-label"><i class="fas fa-filter me-1"></i> Filter by Event</label>
                    <select name="eventId" class="form-select">
                        <option value="">All Events</option>
                        @if (ViewBag.Events != null)
                        {
                            @foreach (var evt in ViewBag.Events as List<Event>)
                            {
                                <option value="@evt.EventID">@evt.EventName</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var review in Model)
            {
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body p-4">
                            <div class="row">
                                <div class="col-lg-9">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <h5 class="mb-2">@review.Event.EventName</h5>
                                            <div class="text-warning mb-2">
                                                @for (int i = 0; i < 5; i++)
                                                {
                                                    if (i < review.Rating)
                                                    {
                                                        <i class="fas fa-star"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star"></i>
                                                    }
                                                }
                                                <span class="text-muted ms-2">@review.Rating/5</span>
                                            </div>
                                        </div>
                                        <span class="badge bg-info">@review.Event.Category.CategoryName</span>
                                    </div>

                                    <p class="mb-3">@review.Comment</p>

                                    <div class="text-muted">
                                        <small>
                                            <i class="fas fa-user me-1"></i>
                                            <strong>@review.Member.FirstName @review.Member.LastName</strong>
                                            <i class="fas fa-calendar ms-3 me-1"></i>
                                            @review.ReviewDate.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                </div>

                                <div class="col-lg-3 border-start d-flex align-items-center justify-content-center">
                                    <div class="text-center">
                                        <a asp-controller="Event" asp-action="Details" asp-route-id="@review.EventID" 
                                           class="btn btn-outline-primary">
                                            <i class="fas fa-eye me-2"></i>View Event
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-star fa-4x text-muted mb-4"></i>
                <h4 class="mb-3">No Reviews Yet</h4>
                <p class="text-muted mb-4">Be the first to share your experience!</p>
                <a asp-controller="Event" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="fas fa-calendar-alt me-2"></i>Browse Events
                </a>
            </div>
        </div>
    }
</div>
