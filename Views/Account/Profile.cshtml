@using System.Linq
@model Member
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-4">
    <div class="row">
        <!-- Profile Information -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body p-4 text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-circle fa-5x text-primary"></i>
                    </div>
                    <h3 class="mb-1">@Model.FullName</h3>
                    <p class="text-muted mb-3">@Model.Email</p>
                    <span class="badge bg-success px-3 py-2">@Model.Status</span>
                    
                    <hr class="my-4">
                    
                    <div class="text-start">
                        <p class="mb-2">
                            <i class="fas fa-phone text-muted me-2"></i>
                            <strong>Phone:</strong> @Model.Phone
                        </p>
                        <p class="mb-0">
                            <i class="fas fa-calendar text-muted me-2"></i>
                            <strong>Member Since:</strong> @Model.JoinDate.ToString("MMM yyyy")
                        </p>
                    </div>
                </div>
            </div>

            <!-- Statistics Card -->
            <div class="card shadow-sm mt-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">My Statistics</h5>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Total Bookings</span>
                        <strong class="text-primary">@Model.Bookings.Count</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Preferences</span>
                        <strong class="text-primary">@Model.Preferences.Count</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Account Status</span>
                        <strong class="text-success">@Model.Status</strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- Profile Content -->
        <div class="col-lg-8">
            <!-- Event Preferences -->
            <div class="card shadow-sm mb-4">
                <div class="card-body p-4">
                    <h4 class="fw-bold mb-4">
                        <i class="fas fa-heart text-danger me-2"></i>Event Preferences
                    </h4>
                    @if (Model.Preferences.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var preference in Model.Preferences)
                            {
                                <span class="badge bg-info px-3 py-2">
                                    <i class="fas fa-tag me-1"></i>@preference.Category.CategoryName
                                </span>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            You haven't set any event preferences yet. 
                            Set your preferences to receive personalized event recommendations!
                        </div>
                    }
                </div>
            </div>

            <!-- Recent Bookings -->
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="fw-bold mb-0">
                            <i class="fas fa-ticket-alt text-primary me-2"></i>Recent Bookings
                        </h4>
                        <a asp-controller="Booking" asp-action="History" class="btn btn-outline-primary btn-sm">
                            View All
                        </a>
                    </div>

                    @if (Model.Bookings.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Event</th>
                                        <th>Date</th>
                                        <th>Tickets</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var recentBookings = Model.Bookings.OrderByDescending(b => b.BookingDate).Take(5).ToList();
                                    }
                                    @foreach (var booking in recentBookings)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@booking.Event.EventName</strong><br>
                                                <small class="text-muted">@booking.BookingReference</small>
                                            </td>
                                            <td>@booking.Event.EventDate.ToString("MMM dd, yyyy")</td>
                                            <td>@booking.TotalTickets</td>
                                            <td class="text-success">$@booking.TotalAmount.ToString("F2")</td>
                                            <td>
                                                @if (booking.Status == "Confirmed")
                                                {
                                                    <span class="badge bg-success">@booking.Status</span>
                                                }
                                                else if (booking.Status == "Cancelled")
                                                {
                                                    <span class="badge bg-danger">@booking.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@booking.Status</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle fa-2x mb-2"></i>
                            <p class="mb-0">You haven't made any bookings yet. Start exploring our events!</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow-sm mt-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">Quick Actions</h5>
                    <div class="d-grid gap-2 d-md-flex">
                        <a asp-controller="Event" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-calendar-alt me-2"></i>Browse Events
                        </a>
                        <a asp-controller="Booking" asp-action="History" class="btn btn-outline-primary">
                            <i class="fas fa-history me-2"></i>Booking History
                        </a>
                        <a asp-controller="Inquiry" asp-action="Create" class="btn btn-outline-secondary">
                            <i class="fas fa-envelope me-2"></i>Contact Us
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
