@model Inquiry
@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="fas fa-envelope fa-3x text-primary mb-3"></i>
                        <h2 class="fw-bold">Contact Us</h2>
                        <p class="text-muted">Have a question? We'd love to hear from you</p>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="fas fa-user me-1"></i> Full Name
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="John Doe" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope me-1"></i> Email Address
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="john.doe@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">
                                <i class="fas fa-phone me-1"></i> Phone Number (Optional)
                            </label>
                            <input asp-for="Phone" class="form-control" placeholder="+1 (555) 123-4567" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subject" class="form-label">
                                <i class="fas fa-tag me-1"></i> Subject
                            </label>
                            <input asp-for="Subject" class="form-control" placeholder="How can we help you?" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Message" class="form-label">
                                <i class="fas fa-comment me-1"></i> Message
                            </label>
                            <textarea asp-for="Message" class="form-control" rows="6" 
                                      placeholder="Tell us more about your inquiry..."></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            We typically respond within 24-48 hours on business days.
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Send Message
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Home
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Contact Info -->
            <div class="card shadow-sm mt-4">
                <div class="card-body p-4">
                    <h5 class="mb-3">Other Ways to Reach Us</h5>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="fas fa-phone fa-2x text-primary mb-2"></i>
                                <p class="mb-0"><strong>Phone</strong></p>
                                <p class="text-muted">+1 (555) 123-4567</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="fas fa-envelope fa-2x text-primary mb-2"></i>
                                <p class="mb-0"><strong>Email</strong></p>
                                <p class="text-muted">info@culturalcouncil.com</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="fas fa-clock fa-2x text-primary mb-2"></i>
                                <p class="mb-0"><strong>Hours</strong></p>
                                <p class="text-muted">Mon-Fri: 9AM-5PM</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
